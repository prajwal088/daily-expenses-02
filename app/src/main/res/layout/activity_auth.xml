<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_app_logo"
                android:contentDescription="@string/app_name" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/textPrimary"/>

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track_your_financial_journey_with_ease"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Google Sign-in Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/continue_with_google"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/background_color"
                android:textColor="@color/textPrimary"
                style="@style/Widget.Material3.Button" />

            <!-- OR Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:layout_marginTop="12dp"
                android:gravity="center" />

            <!-- Guest Sign-in Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/continue_as_guest"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/dark_blue"
                android:textColor="@android:color/white"
                style="@style/Widget.Material3.Button" />

            <!-- ProgressBar for Loading -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:indeterminate="true"
                android:contentDescription="@string/loading_authentication" />

            <!-- Terms of Service Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_continuing_you_agree_to_our_terms_of_service_and_privacy_policy"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="12dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
